{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "cSpell.words": [
        "ckpt",
        "daocloud",
        "mypy",
        "navdp",
        "venv"
    ],
    "files.exclude": {
        "**/.mypy_cache": true,
        "**/__pycache__": true
    }
}